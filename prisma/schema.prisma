generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id         String   @id            // This will be Clerk's user ID
  email      String   @unique
  username String?
  firstName  String?
  lastName   String?
  isStaff    Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  signups    Signup[]
}

model Event {
  id             String      @id @default(cuid())
  title          String
  slug           String      @unique
  description    String
  location       String
  date           DateTime
  category       String
  capacity       Int?
  eventImageUrl String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  signups        Signup[]
}

model Signup {
  id         Int      @id @default(autoincrement())
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  event      Event    @relation(fields: [eventId], references: [id])
  eventId    String
  createdAt  DateTime @default(now())

  @@unique([userId, eventId]) // prevent double sign-ups
}
